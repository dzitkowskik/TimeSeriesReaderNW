html
    height: 100%
    max-height: 100%

*, *:before, *:after
   -moz-box-sizing: border-box;
   -webkit-box-sizing: border-box;
   box-sizing: border-box;

body
    background-color: #303538
    background-image: linear-gradient(-45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent)
    background-size:50px 50px
    height: 100%
    max-height: 100%
    color: #3A4145

a
    color: #4a4a4a
    transition: color ease 0.3s

a:hover
    color: #57A3E8

.pure-g-r
    padding: 1em
    display: flex
    letter-spacing: 0em

.pure-u-1, .pure-u-1-12, .pure-u-1-2, .pure-u-1-24, .pure-u-1-3, .pure-u-1-4, .pure-u-1-5,
.pure-u-1-6, .pure-u-1-8, .pure-u-11-12, .pure-u-11-24, .pure-u-13-24, .pure-u-17-24, .pure-u-19-24,
.pure-u-2-3, .pure-u-2-5, .pure-u-23-24, .pure-u-3-4, .pure-u-3-5, .pure-u-3-8, .pure-u-4-5,
.pure-u-5-12, .pure-u-5-24, .pure-u-5-6, .pure-u-5-8, .pure-u-7-12, .pure-u-7-24, .pure-u-7-8
    background-color: #fff
    padding: 1em

#progressBar
    margin: auto

h1
    background-color: #fff

.topHeaderSmaller
    padding: 1px

header,
footer
    text-align: center

#dropbox
  background-color: rgba(255,51,153,.2)
  border: 1px solid #f39
  border-radius: 5px
  margin-bottom: 10px
  padding: 10px
  text-align: center